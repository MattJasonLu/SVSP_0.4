<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jdlink.mapper.UserMapper">
    <insert id="add" parameterType="User" >
        insert into user ( username, password, clientId, isAdmin ) values (#{username}, #{password}, #{clientId}, #{isAdmin})
    </insert>

    <delete id="delete" parameterType="User" >
        delete from user where id= #{id}
    </delete>

    <select id="get" parameterType="map" resultType="User">
        select * from user where username = #{username} and password = #{password}
    </select>

    <select id="getById" parameterType="int">
        SELECT * FROM user WHERE id=#{id} LIMIT 1;
    </select>

    <select id="getByUsername" parameterType="String" resultType="User">
        SELECT * FROM user WHERE username=#{username};
    </select>

    <update id="update" parameterType="User" >
        update user set password=#{password} where id=#{id}
    </update>
    <select id="list" resultType="User">
        select * from user
    </select>
</mapper>